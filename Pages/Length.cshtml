@page "/home"
@model UnitConverterRazor.Pages.LengthModel
@{
  ViewData["Title"] = "Length Converter";
  var hasResult = Model.HasResult; 
}

<style>
   .uc-wrapper {
    display: flex;
    gap: 2rem;
    padding: 2rem;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
   }

   .uc-panel {
    flex: 1;
    border: 2px solid #222;
    border-radius: 12px;
    padding: 1.5rem 2rem;
    background-color: #f9f9f9;
   }

   .uc-title {
    font-size: 1.8rem;
    font-weight: 700;
    margin-bottom: 1rem;
   }

  .uc-tabs a {
    margin-right: 1rem;
    text-decoration: none;
    font-weight: 500;
    color: #222;
  }

  .uc-tabs a.active {
    text-decoration: underline;
    text-underline-offset: 4px;
    color: #2563eb;
  }

  .uc-field {
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
  }

  .uc-field label {
    font-weight: 500;
  }

  .uc-input,
  .uc-select {
    padding: 0.4rem 0.6rem;
    border-radius: 6px;
    border: 2px solid #222;
    font-size: 1rem;
  }

  .uc-button {
    margin-top: 1.5rem;
    padding: 0.5rem 1.5rem;
    border-radius: 8px;
    border: 2px solid #222;
    background-color: white;
    cursor: pointer;
    font-size: 1rem;
    font-weight: 500;
  }

  .uc-button:hover {
    background-color: #e5e7eb;
  }

  .uc-result-label {
    margin-top: 1.5rem;
    font-size: 1.1rem;
  }

  .uc-result-value {
    margin-top: 0.5rem;
    font-size: 2rem;
    font-weight: 700;
  }

</style>

<div class="uc-wrapper">

    <div class="uc-panel">
        <div class="uc-title">Unit Converter</div>

        <div class="uc-tabs">
            <a asp-page="/Length" class="active">Length</a>
            <a asp-page="/Weight">Weight</a>
            <a asp-page="/Temperature">Temperature</a>
        </div>

        <form method="post">
            <div class="uc-field">
                <label>Enter the length to convert</label>
                <input asp-for="InputValue" type="number" step="any" class="uc-input" required />
            </div>

            <div class="uc-field">
                <label>Unit to convert from</label>
                <select asp-for="FromUnit" class="uc-select">
                    <option value="mm">Millimeter (mm)</option>
                    <option value="cm">Centimeter (cm)</option>
                    <option value="m">Meter (m)</option>
                    <option value="km">Kilometer (km)</option>
                    <option value="inch">Inch (inch)</option>
                    <option value="foot">Foot (ft)</option>
                    <option value="yard">Yard (yard)</option>
                    <option value="mile">Mile (mile)</option>
                </select>
            </div>

            <div class="uc-field">
                <label>Unit to convert to</label>
                <select asp-for="ToUnit" class="uc-select">
                    <option value="mm">Millimeter (mm)</option>
                    <option value="cm">Centimeter (cm)</option>
                    <option value="m">Meter (m)</option>
                    <option value="km">Kilometer (km)</option>
                    <option value="inch">Inch (inch)</option>
                    <option value="foot">Foot (ft)</option>
                    <option value="yard">Yard (yard)</option>
                    <option value="mile">Mile (mile)</option>
                </select>
            </div>

            <button type="submit" class="uc-button">Convert</button>
        </form>
    </div>


    <div class="uc-panel">
        <div class="uc-title">Unit Converter</div>

        <div class="uc-tabs">
            <a asp-page="/Length" class="active">Length</a>
            <a asp-page="/Weight">Weight</a>
            <a asp-page="/Temperature">Temperature</a>
        </div>

        @if (hasResult)
        {
            <div class="uc-result-label">Result of your calculation</div>
            <div class="uc-result-value">
                @Model.InputValue @Model.FromUnit = @Model.Result @Model.ToUnit
            </div>

            <form method="get">
                <button type="submit" class="uc-button">Reset</button>
            </form>
        }
        else
        {
            <div class="uc-result-label">
                Result of your calculation will appear here after you convert a value.
            </div>
        }
    </div>
</div>
